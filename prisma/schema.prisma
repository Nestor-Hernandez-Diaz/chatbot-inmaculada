generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  products    Product[]
}

model Product {
  id          Int         @id @default(autoincrement())
  sku         String      @unique
  name        String
  description String?
  price       Decimal     @db.Decimal(10, 2)
  stock       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  categoryId  Int
  orderItems  OrderItem[]
  category    Category    @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
  @@index([name])
}

model Order {
  id                     Int                   @id @default(autoincrement())
  total                  Decimal               @db.Decimal(10, 2)
  status                 OrderStatus           @default(PENDING)
  createdAt              DateTime              @default(now())
  updatedAt              DateTime              @updatedAt
  customerPhone          String
  whatsappConversationId Int?                  @unique
  whatsappConversation   WhatsappConversation? @relation(fields: [whatsappConversationId], references: [id])
  items                  OrderItem[]

  @@index([customerPhone])
  @@index([status])
}

model OrderItem {
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
  orderId   Int
  productId Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@id([orderId, productId])
  @@index([orderId])
  @@index([productId])
}

model WhatsappConversation {
  id            Int                @id @default(autoincrement())
  customerPhone String
  botPhone      String
  status        ConversationStatus @default(OPEN)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  messages      Message[]
  Order         Order?

  @@index([customerPhone])
}

model Message {
  id             String               @id @unique
  sender         SenderType
  content        String
  contentType    String
  timestamp      DateTime
  conversationId Int
  conversation   WhatsappConversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId])
}

model Store {
  id      Int          @id @default(autoincrement())
  name    String       @unique
  address String?
  phone   String?
  hours   StoreHours[]
}

model StoreHours {
  id        Int      @id @default(autoincrement())
  dayOfWeek Int
  openTime  DateTime @db.Time(6)
  closeTime DateTime @db.Time(6)
  storeId   Int
  store     Store    @relation(fields: [storeId], references: [id])

  @@index([storeId])
  @@index([dayOfWeek])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY_FOR_PICKUP
  COMPLETED
  CANCELLED
}

enum ConversationStatus {
  OPEN
  CLOSED
  NEEDS_ATTENTION
}

enum SenderType {
  USER
  BOT
}
