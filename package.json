{
    "name": "chatbot-inmaculada",
    "version": "1.0.0",
    "description": "Chatbot de WhatsApp para Supermercado La Inmaculada",
    "main": "src/server.js",
    "scripts": {
        "dev": "nodemon src/server.js",
        "start": "node src/server.js",
        "start:stable": "node src/server.js",
        "test": "jest --detectOpenHandles --forceExit",
        "test:watch": "jest --watch",
        "db:migrate": "npx prisma migrate dev",
        "db:seed": "node prisma/seed-inteligente.js",
        "db:studio": "dotenv -- npx prisma studio",
        "db:reset": "npx prisma migrate reset",
        "db:generate": "npx prisma generate",
        "setup": "npm install && npx prisma generate && npx prisma migrate dev && npm run db:seed"
    },
    "keywords": [
        "chatbot",
        "whatsapp",
        "supermercado",
        "ecommerce"
    ],
    "author": "Tu Nombre",
    "license": "MIT",
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "@prisma/client": "^5.7.0",
        "@wppconnect-team/wppconnect": "^1.30.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.21.2",
        "pino": "^8.17.0",
        "pino-pretty": "^10.3.0",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "dotenv-cli": "^10.0.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prisma": "^5.7.0",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "prisma": {
        "seed": "node prisma/seed-inteligente.js"
    }
}
