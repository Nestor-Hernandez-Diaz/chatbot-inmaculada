{
    "name": "chatbot-inmaculada",
    "version": "1.0.0",
    "description": "Chatbot de WhatsApp para Supermercado La Inmaculada",
    "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "start:stable": "node src/server.js",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:generate": "npx prisma generate",
    "setup": "npm install && npx prisma generate && npx prisma migrate dev && npm run db:seed"
  },
    "keywords": [
      "chatbot",
      "whatsapp",
      "supermercado",
      "ecommerce"
    ],
    "author": "Tu Nombre",
    "license": "MIT",
    "dependencies": {
      "@prisma/client": "^5.7.0",
      "@wppconnect-team/wppconnect": "^1.30.0",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1",
      "express": "^4.18.2"
    },
    "devDependencies": {
      "nodemon": "^3.0.2",
      "prisma": "^5.7.0"
    },
    "engines": {
      "node": ">=16.0.0"
    },
    "prisma": {
      "seed": "node prisma/seed.js"
    }
  }